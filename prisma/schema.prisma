generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_DB_URL")
}

model User {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  login       String  @unique
  password    String
  email       String  @unique
  phoneNumber String? @default("")
  avatar      String? @default("")
  firstName   String? @default("")
  lastName    String? @default("")
}
